= form_for @feed do |f|
  - if @feed.errors.any?
    #error_explanation
      %h2= "#{pluralize(@feed.errors.count, "error")} prohibited this feed from being saved:"
      %ul
        - @feed.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :author
    = f.text_field :author
  .field
    = f.label :thumbnail
    = f.text_field :thumbnail
  .field
    = f.label :stream_link
    = f.text_field :stream_link
  .actions
    = f.submit 'Save'
