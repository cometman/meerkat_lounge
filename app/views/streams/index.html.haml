.row{"ng-controller" => "MeerkatSearchCtrl"}
  %nav.top-bar{"data-topbar" => "", :role => "navigation"}
    %ul.center
      %img(src="/logo.png" height=50)
      .row
        .small-9.columns.small-centered
          %input(type='text' ng-model='search' placeholder='@, # or Location')
      .row
        .small-12.columns
          %p.small-text-center
            %a{:href => "https://twitter.com/clay_selby"}a project by @clay_selby
            
  %h1.text-center
    Meerkat Lounge
  %h3.text-center
    Find, browse and watch live Meerkat streams.
  %ul.small-block-grid-1.medium-block-grid-1.large-block-grid-3
    %li(ng-repeat="stream in streams")
      %a(href="http://meerkatapp.co/{{stream.broadcaster.name}}/{{stream.stream_identifier}}")
        .panel
          %h2 {{stream.caption}}
          %img(ng-src="{{stream.cover}}")
          .row.activity
            %i.fi-torsos-all 
              {{stream.watchers_count}}
            %i.fi-star
              {{stream.like_count || 0}}
            %i.fi-comment
              {{stream.comment_count || 0}}
            %i.fi-share
              {{stream.restream_count || 0}}
          %ul
            %li
              %i.fi-torso.large 
                {{stream.broadcaster.name}}
            %li
              %i.fi-marker.large 
                {{stream.location}}