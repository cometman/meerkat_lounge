.row{"ng-controller" => "MeerkatSearchCtrl"}
  %nav.top-bar{"data-topbar" => "", :role => "navigation"}
    %ul.center
      .show-for-medium-up
        %img(src="/logo.png" height=50)
      .row
        .small-1.columns.text-right
          .search-icon
            .hide-for-small
              %i.fi-magnifying-glass
        .small-8.columns.small-centered
          %input(type='text' ng-model='search' placeholder='@, # or Location')
      .row
        .small-4.columns
          %p.small-text-center
            %a{:href => "http://socialrest.com", target: "_blank"}a project by @socialrest
        .small-4.columns
          %p.small-text-center
            %a{:href => "http://twitter.com/socialrest", target: "_blank"}feature, bug, comment?
  %section.main
    %h1.text-left.name
      %i.fi-results
  %ul.small-block-grid-1.medium-block-grid-1.large-block-grid-3
    %li(ng-repeat="stream in streams")
      %a(href="http://meerkatapp.co/{{stream.broadcaster.name}}/{{stream.stream_identifier}}" target="_blank")
        .panel
          %h2 {{stream.caption}}
          %img(ng-src="{{stream.cover}}")
          .row.activity
            %i.fi-torsos-all 
              {{stream.watchers_count}}
            %i.fi-star
              {{stream.like_count || 0}}
            %i.fi-comment
              {{stream.comment_count || 0}}
            %i.fi-share
              {{stream.restream_count || 0}}
          %ul
            %li
              %i.fi-torso.large 
                {{stream.broadcaster.name}}
            %li
              %i.fi-marker.large 
                {{stream.location}}