    %script{:src => "javascripts/src/h264-stream.js"}
    %script{:src => "javascripts/src/aac-stream.js"}
    %script{:src => "javascripts/src/metadata-stream.js"}
    %script{:src => "javascripts/src/segment-parser.js"}
